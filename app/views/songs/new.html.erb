<h1>New Song</h1>
<% if @song.errors.any? %>
  <ul>
    <% @song.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
<% end %>
<%= form_for @song do |f| %>
  <%= f.label :title %><br>
  <%= f.text_field :title %><br>
  <%= f.label :released %><br>
  <%= f.check_box :released %><br>
  <%= f.label :release_year %><br>
  <%= f.number_field :release_year %><br>
  <%= f.label :artist_name %><br>
  <%= f.text_field :artist_name %><br>
  <%= f.label :genre %><br>
  <%= f.text_field :genre %><br>
  <%= f.submit %>
<% end %>
